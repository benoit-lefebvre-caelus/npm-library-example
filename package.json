{
  "name": "@benoit-lefebvre-caelus/library",
  "version": "0.1.0",
  "type": "module",
  "description": "Library of Next.js/React components and tools.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "generate": "node generate-index.js",
    "build": "npm run generate && rollup -c",
    "publish:github": "npm publish",
    "test:full": "concurrently \"npm run test:component\" \"npm run test:unit\" ; npm run test:merge ; npm run test:merged:generate:lcov ; npm run test:merged:publish",
    "test:component": "BABEL_ENV=coverage cypress run --component",
    "test:unit": "BABEL_ENV=coverage cross-env ENV=test jest",
    "test:merge": "cp coverage/COMPONENTS/coverage-final.json coverage/comp.json ; cp coverage/UNITS/coverage-final.json coverage/unit.json ; nyc merge coverage .nyc_output/out.json ",
    "test:merged:generate:html": "nyc report --reporter=html --report-dir=coverage/final",
    "test:merged:generate:lcov": "nyc report --reporter=lcov --report-dir=coverage/final",
    "test:merged:publish": "sonar-scanner",
    "test:component:cypress:open": "CYPRESS_WEBPACK_DEV_SERVER_FAST_REFRESH=false  CYPRESS_COVERAGE=true cypress open"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-babel",
    "include": [
      "src/components/*.jsx",
      "src/modules/*.module.js",
      "src/objects/*.js",
      "src/services/*.service.js"
    ],
    "exclude": [
      "**/*.test.js",
      "**/*.cy.js",
      "node_modules"
    ],
    "reporter": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "all": true,
    "report-dir": "coverage/COMPONENTS"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:benoit-lefebvre-caelus/npm-library-example.git"
  },
  "keywords": [],
  "author": "Benoit LEFEBVRE",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/benoit-lefebvre-caelus/npm-library-example/issues"
  },
  "homepage": "https://github.com/benoit-lefebvre-caelus/npm-library-example/blob/main/README.md",
  "dependencies": {
    "prop-types": "^15.8.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rollup-plugin-copy": "^3.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/plugin-transform-runtime": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@cypress/code-coverage": "^3.14.6",
    "@istanbuljs/nyc-config-babel": "^3.0.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@testing-library/cypress": "^10.1.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "babel-jest": "^30.1.2",
    "babel-loader": "^10.0.0",
    "babel-plugin-istanbul": "^7.0.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "css-loader": "^7.1.2",
    "cypress": "^15.2.0",
    "identity-obj-proxy": "^3.0.0",
    "istanbul-lib-coverage": "^3.2.2",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "next": "^15.5.3",
    "nyc": "^17.1.0",
    "postcss-loader": "^8.2.0",
    "rollup": "^4.49.0",
    "style-loader": "^4.0.0",
    "ts-node": "^10.9.2",
    "webpack": "^5.101.3"
  }
}